<?xml version="1.0"?>
<Container version="2">
  <Name>Shiny-Server</Name>
  <Repository>rocker/shiny-verse</Repository>
  <Registry>https://hub.docker.com/r/rocker/shiny-verse</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support/>
  <Project/>
  <Overview>Rocker Shiny server image with Tidyverse R packages pre-installed. Uses version-stable images. </Overview>
  <Category>Productivity:</Category>
  <WebUI>http://[IP]:[PORT:80]</WebUI>
  <TemplateURL/>
  <Icon>https://d33wubrfki0l68.cloudfront.net/8f68bc526580587d60714f9279fbe9d86b25362a/79958/assets/img/shiny.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled>1623568756</DateInstalled>
  <DonateText/>
  <DonateLink/>
  <Description>Rocker Shiny server image with Tidyverse R packages pre-installed. Uses version-stable images. </Description>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>80</HostPort>
        <ContainerPort>3838</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/shiny-server/shinyapps</HostDir>
      <ContainerDir>/srv/shiny-server/</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
    <Volume>
      <HostDir>/mnt/user/appdata/shiny-server/logs</HostDir>
      <ContainerDir>/var/log/shiny-server/</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Environment/>
  <Labels/>
  <Config Name="Shiny app directory" Target="/srv/shiny-server/" Default="/mnt/user/appdata/shiny-server/shinyapps" Mode="rw" Description="Shiny app directory. Place your shiny apps in this directory." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/shiny-server/shinyapps</Config>
  <Config Name="Shiny logs directory" Target="/var/log/shiny-server/" Default="/mnt/user/appdata/shiny-server/logs" Mode="rw" Description="Directory for Shiny app logs." Type="Path" Display="always" Required="true" Mask="false">/mnt/user/appdata/shiny-server/logs</Config>
  <Config Name="Shiny Port" Target="3838" Default="" Mode="tcp" Description="Container Port: 3838" Type="Port" Display="always" Required="true" Mask="false">80</Config>
</Container>